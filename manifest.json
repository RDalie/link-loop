{
    "manifest_version": 3,
    "name": "LinkLoop",
    "version": "1.0",
    "description": "Automatically tracks tab activity and time spent.",
    "permissions": ["tabs", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_title": "LinkLoop is running",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_popup": "popup.html"
    }
  }
  